<br>
<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Brand</li>
        </ol>
    </div>
    <div class="col-md-6">        
        <form action="/admin/brand" method="POST">
            <div class="form-group">
                <label for="Brand">Brand Name </label>
                <input type="text" class="form-control" name="brand">
            </div>
            <div class="form-group">
               <button class="btn btn-primary my-2 my-sm-0" type="submit" > Add Brand </button>
            </div>
        </form>
   </div>
   <div class="col-md-6">        
       <h4>Brands</h4>
       <hr>
       <table class="table table-bordered table-hover">
           <tbody>
               <% brands.forEach(function(brand){ %>
                    <tr><td><%= brand.brand %></td></tr>
               <% }); %>
           </tbody>
       </table>
   </div>
</div>

    <% if(typeof add_brand_errors != 'undefined'){ %>
        <% add_brand_errors.forEach(function(add_brand_error){ %>
            <div class="alert alert-danger" role="alert">
                <%= add_brand_error.msg; %>
              </div>
        <% }); %>
    <% } %>
