<br>
<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Add Stock</li>
        </ol>
        <div class="row">
            <div class="col-12">
                <a href="/admin/products"><button class="btn btn-primary">View Products</button> </a>
                <a href="/admin/add-product"><button class="btn btn-primary">Add New Product</button> </a>
            </div>
        </div>
       <br>
    </div>
    <div class="col-md-6">
        <% if(typeof update_errors != 'undefined'){ %>
            <% update_errors.forEach(function(update_error){ %>
                <div class="alert alert-danger" role="alert">
                    <%= update_error.msg; %>
                  </div>
            <% }); %>
        <% } %>
        <form action="/admin/update-stock" method="post">
            <div class="form-group">
                <label for="search"><h4>Brand</h4></label>
                <select name="brand" class="form-control">
                    <option value="">Select</option>
                    <% brands.forEach(function(brand){ %>
                        <option value="<%= brand.brand %>"><%= brand.brand %></option>
                    <% }); %>
                </select>
            </div>
            <div class="form-group">
                <label for="search"><h4>Model</h4></label>
                <input type="text" class="form-control" name="model">
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Get product</button>
            </div>
        </form>
    </div>
    <% if(typeof product != 'undefined'){ %>
        <div class="col-xl-3 col-md-6">
            <div class="card" style="width: 18rem;">
                <img src="/product-images/<%= product._id %>.jpg" class="card-img-top" alt="Product Image" height='200px'>
                <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text">Brand: <%= product.brand %></p>
                <p class="card-text">Price: <%= product.price %></p>
                <p class="card-text">Stock: <%= product.quantity %></p>
                <a href="/admin/add-stock/<%= product._id %>" class="btn btn-primary">Add stock</a>
                </div>
            </div>
        </div>
    <% } %>

    
</div>


