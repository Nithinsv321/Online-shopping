<br>
<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Add Stock</li>
        </ol>
        <% if(typeof update_stock_errors != 'undefined'){ %>
            <% update_stock_errors.forEach(function(update_stock_error){ %>
                <div class="alert alert-danger" role="alert">
                    <%= update_stock_error.msg; %>
                  </div>
            <% }); %>
        <% } %>
    </div>
    <div class="col-md-6">
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Brand</th>
                    <th>Category</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><%= product.name %></td>
                    <td><%= product.brand %></td>
                    <td><%= product.category %></td>
                    <td><%= product.quantity %></td>
                </tr>
            </tbody>
        </table>
        <form action="/admin/add-stock/<%= product._id %>" method="POST">
            <div class="form-group">
                <label for="brand">Price</label>
                <input type="text" class="form-control" value="<%= product.price %>" name="price">
            </div>
            <div class="form-group">
                <label for="brand">Update Quantity</label>
                <input type="text" class="form-control" name="quantity">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update Stock</button>
            </div>
        </form>
    </div>
</div>