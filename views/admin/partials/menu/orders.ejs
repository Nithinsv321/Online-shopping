<br>
<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Orders</li>
        </ol>
    </div>
</div>

<br>
 <table class="table table-bordered" >
    <thead class="thead-dark" >
        <tr>
            <th>Product</th>
            <th>User</th>
            <th>Address</th>
            <th>Quantity</th>
            <th>Payment</th>
        </tr>
    </thead>
    <tbody>
        <% if(typeof orders != 'undefined') { %>
            <% orders.forEach(function(order){ %>
                <tr>
                    <td>
                        <div class="col-xl-12 col-md-12">
                            <div class="card">
                                <div class="card-body">
                                <h5 class="card-title"></h5>
                                <p class="card-text"><%= order.OrderedProduct[0].model %> </p>
                                <p class="card-text"><%= order.OrderedProduct[0].price %> </p>
                                </div>
                            </div>
                        </div>
                    </td>
                    <td><%= order.userOrdered[0].name %></td>
                    <td><%= order.product %></td>
                    <td><%= order.quantity %></td>
                    <td><%= order.payment %></td>
                 </tr>

            <% }); %>
         
         <% } %>
    </tbody>
</table>