<br>
<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Category</li>
        </ol>
    </div>
    <div class="col-md-6">        
        <form action="/admin/category" method="POST">
            <div class="form-group">
                <label for="Brand">Category  </label>
                <input type="text" class="form-control" name="category">
            </div>
            <div class="form-group">
               <button class="btn btn-primary my-2 my-sm-0" type="submit" > Add Category </button>
            </div>
        </form>
   </div>
   <div class="col-md-6">        
       <h4>Category</h4>
       <hr>
       <table class="table table-bordered table-hover">
           <tbody>
               <% categorys.forEach(function(category){ %>
                    <tr><td><%= category.category %></td></tr>
               <% }); %>
           </tbody>
       </table>
   </div>
</div>
<% if(typeof add_category_errors != 'undefined'){ %>
    <% add_category_errors.forEach(function(add_category_error){ %>
        <div class="alert alert-danger" role="alert">
            <%= add_category_error.msg; %>
          </div>
    <% }); %>
<% } %>
