<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Add Products</li>
        </ol>
        <form action="/admin/add-product" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" placeholder="Enter product Name" name="name" >
            </div>
            <div class="form-group">
                <label for="category">category</label>
                <select name="category" class="form-control col-md-3">
                    <option value="">Select</option>
                </select>
            </div>
            <div class="form-group">
                <label for="brand">Brand</label>
                <input class="form-control" type="text" placeholder="Enter product Brand" name="brand" >
            </div>
            <div class="form-group">
                <label for="model">Model</label>
                <input class="form-control" type="text" placeholder="Enter product model" name="model" >
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input class="form-control col-md-3" type="text" placeholder="Enter product price" name="price" >
            </div>
            <div class="form-group">
                <label for="image">Image</label><br>
                <input type="file" name="image">
            </div>
            <button class="btn btn-primary" type="submit">Add Product</button>
        </form>
        
    </div>
</div>